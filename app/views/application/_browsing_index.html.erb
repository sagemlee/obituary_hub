<div class="container">

  <% @obituaries.each do |obit| %>
  <% cache(obit) do %>
    <div class="row" style= "background-color:white;">
      <div class="col-md-3 p-4">
        <%= link_to image_tag(obit.image_url, width: 150), "/obituaries/#{obit.id}" %>
      </div>
      <div class="col-md-9 p-4">
        <h3><%= "#{obit.first_name} #{obit.last_name}" %></h3>
        <p class ="obit-<%=obit.id%>"><%= obit.description.first(200)%></p>
        <a class="btn btn-dark" href= <%= "/obituaries/#{obit.id}" %>>View Obituary</a>
      </div>
    </div>
    <hr>
  <% end %>
<% end %>
  <div class="pagination">
    <%= will_paginate @obituaries, renderer: BootstrapPagination::Rails %>
  </div>
</div>
