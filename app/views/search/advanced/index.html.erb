<div class="container">
  <div class="col-sm-9 col-md-7 col-lg-8 mx-auto">
    <br><h1 class="card-title text-center">Advanced Search Options</h1>
    <div class="card card-search my-5">
      <%= form_tag "/search/results", method: :get, class: 'submit-form' %>
        <div class="card-body" style= "background-color:white; text-align:center;">
          <p class="card-title">Use this form to search a single field or multiple fields.</p>
          <div class="form-group-search row">
            <div class="col col-form-label-lg">
                <%= label_tag 'Name'%>
                <%= text_field_tag :name, nil, placeholder: "Search by Name", class: "form-control", id: "name_id" %>
            </div>
          </div>

          <div class="form-group-search row">
            <div class="col col-form-label-lg">
              <%= label_tag 'City' %>
              <%= text_field_tag :city, nil, placeholder: 'Search by City', class: "form-control" %>
            </div>
          </div>

          <div class="form-group-search row">
            <div class="col col-form-label-lg" >
              <%= label_tag :state %>
              <%= select_tag :state, options_for_select(us_states), {class: 'custom-select' }  %>
            </div>
          </div>

          <div class="form-group-search row" id="age-select">
            <div class="col col-form-label-lg" >
              <%= label_tag :age %>
              <%= select_tag :age, options_for_select((0..150), 100), {class: 'custom-select' } %>
            </div>
          </div>

          <div class="form-group-search row" id="year-select">
            <div class="col col-form-label-lg" >
              <%= label_tag :year %>
              <%= select_tag :year, options_for_select((1981..2020), 2020), {class: 'custom-select' } %>
            </div>
          </div>

          <div class="form-group-search row" id="source-select">
            <div class="col col-form-label-lg" >
              <%= label_tag :source %>
              <%= select_tag :source, options_for_select(["ObituaryHub Community", "The New York Times"]), {class: 'custom-select' }  %>
            </div>
          </div><br>
          <div class="advanced_search">
            <button class="btn btn-submit btn-lg btn-dark btn-primary btn-block text-uppercase" type="submit" id="submit">Search</button>
          </div>
        </div>
  </div>
</div>
