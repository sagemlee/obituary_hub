<div class="container">
  <div class="col-sm-9 col-md-7 col-lg-8 mx-auto">
    <br><h1 class="card-title text-center"><%= action %> Obituary</h1>
      <div class="car card-signin my-5">
      <%= form_for @obituary, class: 'submit-form' do |f| %>
        <div class="card-body" style= "background-color:white;">
          <div class="form-group row">
            <div class="col">
                <%= f.label 'First Name (required)', class: 'col-form-label-lg'%>
                <%= f.text_field :first_name,  class: "form-control", placeholder: "First name", :required => true%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col">
                <%= f.label 'Last Name (required)', class: 'col-form-label-lg' %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Last name", :required => true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col">
            <%= f.label :label, "Image URL", class: 'col-form-label-lg' %>
            <%= f.text_field :image_url, class: "form-control", placeholder: "Image Url" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-8 mb-3">
              <%= f.label :city, class: 'col-form-label-lg' %>
              <%= f.text_field :city, class: "form-control", placeholder: 'City' %>
            </div>
            <div class="col-md-4 mb-3" id="state-select">
              <%= f.label :state, class: 'col-form-label-lg' %>
              <%= f.select :state, options_for_select(us_states), { }, {class: 'custom-select' } %>
            </div>
          </div>

          <div class="form-label-group row">
            <div class="col">
            <%= f.label :description, class: 'col-form-label-lg'%>
            <%= f.text_area :description, cols: 5, rows: 10, class: "form-control" %>
            </div>
          </div>

          <div class="form-group" id="age-select">
            <%= f.label :age, class: 'col-form-label-lg'%>
            <%= f.select :age, options_for_select((0..150), 100), { }, {class: 'custom-select' } %>
          </div>

          <div class="form-check row" id="covid-select">
            <%= f.check_box :covid, class: 'big-checkbox' %>
            <%= f.label :covid, "This person died from COVID-19", class: 'col-form-label-lg p-3' %>
          </div>
          <br>
          <%= f.submit class: "btn btn-submit btn-lg btn-dark btn-block text-uppercase"%>
        <% end %>
      </div>
  </div>
</div>
